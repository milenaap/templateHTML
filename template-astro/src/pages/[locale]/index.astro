---
import MainLayout from "../../layouts/MainLayout.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
  return [
    { params: { locale: 'en' } },
    { params: { locale: 'de' } },
  ];
}

const name = 'Milena Aguilar'
const title = 'Home Page'


const { locals } = Astro;



---

<ul>
  <li><a href={`/${lang}/home/`}>{t('nav.home')}</a></li>
  <li><a href={`/${lang}/about/`}>{t('nav.hello')}</a></li>
  <li><a href="https://twitter.com/astrodotbuild">{t('nav.twitter')}</a></li>
</ul>

<MainLayout title="Home Page">



	<h1 class="text-3xl font-bold underline">
	Hello world!
	</h1>

	<h1>{locals.title}</h1>
	

	<button type="button" class="btn">Button text</button>


	<h1>{name}</h1>
	<p>Momento actual: {new Date().toLocaleTimeString()}</p>
	<p id="current-time">Momento actual:</p>

	<footer>2025</footer>

	<script>
		const footer = document.querySelector('footer') as HTMLElement;
		const currentTimeParagraph = document.querySelector('#current-time') as HTMLParagraphElement;

		const currentYear: number = new Date().getFullYear();
		
	
		footer.innerText = `AÃ±o: ${currentYear}`;
		currentTimeParagraph.innerText = `Momento actual real:  ${new Date().toLocaleTimeString()}`;


	</script>
	
</MainLayout>

		
