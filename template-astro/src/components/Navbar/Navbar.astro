---
import { useTranslations } from '../../i18n/utils';
import LangSelector from './LangSelector.jsx';
import type { SupportedLang } from '../../i18n/utils';
import { SITE_NAME } from 'astro:env/client';

interface Props {
  lang: SupportedLang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const company = SITE_NAME;
---

<header class="absolute inset-x-0 top-0 z-50">
  <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
    <!-- logo -->
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">{company}</span>
        <img class="w-20 h-auto" src="/images/logo_3.png" alt="logo" />
      </a>
    </div>

    <!-- Botón hamburguesa -->
    <div class="flex lg:hidden">
      <button id="open-menu" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400">
        <span class="sr-only">Open main menu</span>
        <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>

    <!-- enlaces desktop -->
    <div class="hidden lg:flex lg:gap-x-12">
      <a href={`/${lang}/`} class="text-sm/6 font-semibold text-primary">{t("navbar.home")}</a>
      <a href={`/${lang}/about`} class="text-sm/6 font-semibold text-primary">{t("navbar.about")}</a>
      <a href={`/${lang}/menu`} class="text-sm/6 font-semibold text-primary">{t("navbar.menu")}</a>
      <a href={`/${lang}/contact`} class="text-sm/6 font-semibold text-primary">{t("navbar.contact")}</a>
      <a href={`/${lang}/map`} class="text-sm/6 font-semibold text-primary">{t("navbar.map")}</a>
    </div>

    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <div class="mr-5">
        <LangSelector lang={lang} client:load />
      </div>
      <a href="#" class="text-sm/6 font-semibold text-primary">{t("navbar.login")} <span aria-hidden="true">&rarr;</span></a>
    </div>
  </nav>

  <!-- Menú móvil -->
  <div id="mobile-menu" class="hidden fixed inset-0 z-50 flex flex-col bg-gray-900 p-6 sm:max-w-sm sm:ring-1 sm:ring-white/10">
    <div class="flex items-center justify-between">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">{company}</span>
        <img class="h-8 w-auto" src="/images/logo_3.png" alt="" />
      </a>
      <button id="close-menu" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-400">
        <span class="sr-only">Close menu</span>
        <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div class="mt-6 flex flex-col space-y-4">
      <a href={`/${lang}/`} class="text-base/7 font-semibold text-primary hover:bg-gray-800 p-3 rounded">{t("navbar.home")}</a>
      <a href={`/${lang}/about`} class="text-base/7 font-semibold text-primary hover:bg-gray-800 p-3 rounded">{t("navbar.about")}</a>
      <a href={`/${lang}/menu`} class="text-base/7 font-semibold text-primary hover:bg-gray-800 p-3 rounded">{t("navbar.menu")}</a>
      <a href={`/${lang}/contact`} class="text-base/7 font-semibold text-primary hover:bg-gray-800 p-3 rounded">{t("navbar.contact")}</a>
      <a href={`/${lang}/map`} class="text-base/7 font-semibold text-primary hover:bg-gray-800 p-3 rounded">{t("navbar.map")}</a>
      <LangSelector lang={lang} client:load />
      <a href="#" class="text-base/7 font-semibold text-primary hover:bg-gray-800 p-3 rounded">{t("navbar.login")}</a>
    </div>
  </div>

  <!-- Script manejador -->
  <script is:inline>
    const openMenu = document.getElementById('open-menu');
    const closeMenu = document.getElementById('close-menu');
    const mobileMenu = document.getElementById('mobile-menu');

    openMenu?.addEventListener('click', () => {
      mobileMenu.classList.remove('hidden');
    });

    closeMenu?.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  </script>
</header>
