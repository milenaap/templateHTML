---
import MainLayout from '../../layouts/MainLayout.astro';
import { getStaticPaths, getI18nProps } from '../../i18n/helperi18n';

export { getStaticPaths };

interface Props {
  title?: string; 
}

const { lang, t, title } = getI18nProps(Astro.params, 'contact');
---
<div class="section">
<div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <p class="text-base/7 font-semibold text-secondary">
          {t('contact.heading')}
        </p>
        <h2
          class="mt-2 text-5xl font-semibold tracking-tight text-primary sm:text-7xl"
        >
          {t('contact.description')}
        </h2>
        <p
          class="mt-8 text-lg font-medium text-pretty text-neutral-light sm:text-xl/8"
        >
          Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui
          lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat
          fugiat.
        </p>
      </div>
    </div>
  </div>
</div>
 